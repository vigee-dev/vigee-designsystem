{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "strict": true,
    "esModuleInterop": true,
    "module": "esnext",
    "declaration": true,
    "outDir": "components/lib",
    "moduleResolution": "bundler",
    "jsx": "react-jsx",
    "skipLibCheck": true,
    "paths": {
      "@/*": ["./*"]
    },
  },
  "include": ["./**/*", ".", "components"],
  "exclude": ["node_modules", "components/lib"]
}
