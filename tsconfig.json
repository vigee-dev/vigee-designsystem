{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "strict": true,
    "esModuleInterop": true,
    "module": "CommonJS",
    "declaration": true,
    "outDir": "./lib",
    "moduleResolution": "node",
    "jsx": "react",
    "skipLibCheck": true
  },
  "include": ["./**/*"],
  "exclude": ["node_modules", "lib"]
}
